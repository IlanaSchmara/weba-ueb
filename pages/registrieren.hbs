<div class="registrieren-container">

    <div class="registrieren-kasten">

        <div class="log-reg-kasten">

            <h1 class="log-reg-h1"> Ãœberschrift </h1>
            <p class="log-reg-text"> Registrieren Text </p>

            <div class="log-reg-on-eingabefelder">
                <input class="log-reg-on-input" type="text" placeholder="Nutzername" name="eingabe-nutzername" required>
                <input class="log-reg-on-input" type="password" placeholder="Passwort" name="eingabe-passwort" required>
                <input class="log-reg-on-input" type="password" placeholder="Passwort wiederholen" name="eingabe-passwort-wdh">
